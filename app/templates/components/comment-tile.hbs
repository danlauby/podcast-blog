<div class='col-md-12'>
  <form>
    <div class='form-group'>
      <label for='author'>Your Name: </label>
      {{input value=author id='author'}}
    </div>

    <div class='form-group'>
      <label for='date'>Date: </label>
      {{input value=date id='date'}}
    </div>

    <div class='form-group'>
      <label for='content'>Comment: </label>
      {{textarea row=6 value=content id='content'}}
    </div>
    <button class="btn btn-success" {{action "save"}}>Add Comment</button>
  </form>
</div>
